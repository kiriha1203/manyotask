<h1> タスクの詳細</h1>

<div class="nav justify-content-end">
  <%= link_to '一覧', tasks_path, class: 'nav-link' %>
</div>
<table class="table table-hover">
  <tbody>
    <tr>
      <th>ID</th>
      <td><%= @task.id %></td>
    </tr>
    <tr>
      <th>名称</th>
      <td><%= @task.name %></td>
    </tr>
    <tr>
      <th>内容</th>
      <td><%= simple_format(h(@task.content), {}, sanitize: false, wrapper_tags: "div") %></td>
    </tr>
    <tr>
      <th>作成日時</th>
      <td><%= @task.created_at %></td>
    </tr>
    <tr>
      <th>更新日時</th>
      <td><%= @task.updated_at %></td>
    </tr>
  </tbody>
</table>
<%= link_to '編集', edit_task_path, class: 'btn btn-primary mr-3' %>
<%= link_to '削除', task, method: :delete,
            data: { confirm: "タスク「#{task.name}」を削除します。よろしいですか？"},
            class: 'btn btn-danger'%>