<h1>タスク一覧</h1>

<%= link_to '新規登録', new_task_path, class: 'btn btn-primary' %>

<%= form_with(url: tasks_path,  method: :get, local: true ) do |f| %>
  <div class="form-group">
    <%= f.label :name_search %>
    <%= f.text_field :name_search, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :status_search %>
    <%= f.select :status_search, Task.statuses.keys, class: 'form-control', include_blank: true, selected:'' %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :search, value: 'true' %>
  </div>
  <%= f.submit '検索', class: 'btn btn-primary' %>
<% end %>

<div class="mb-3">
  <table class="table table-hover">
    <thead class="thead-default">
      <tr>
        <% def sortTh(name,columnName) %>
          <% if request.fullpath.include?('desc') %>
            <% link_to name, sort: columnName %>
          <% else %>
            <% link_to name, sort: "#{columnName} desc" %>
          <%end %>
        <% end %>

        <th>名称</th>
        <th><%= sortTh('期限日', 'end_deadline') %></th>
        <th>ステータス</th>
        <th>優先度</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.name, task_path(task) %></td>
        <td><%=task.end_deadline %></td>
        <td><%=task.status %></td>
        <td><%=task.priority %></td>
        <td>
          <%= link_to '編集', edit_task_path(task), class: 'btn btn-primary mr-3' %>
          <%= link_to '削除', task, method: :delete,
                      data: { confirm: "タスク「#{task.name}」を削除します。よろしいですか？"},
                      class: 'btn btn-danger'%>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>