<h1>ユーザー一覧</h1>

<%= link_to '新規登録', new_admin_label_path, class: 'btn btn-primary'  %>

<div class="mb-3">
  <table class="table table-hover">
    <thead class="thead-default">
    　<tr>
      <th>ラベル名</th>
      <th>作成日</th>
      <th><%#=ボタン部分のborder延長%></th>
    </tr>
    </thead>
    <tbody>
    <% @labels.each do |label| %>
      <tr>
        <td><%=label.name %></td>
        <td><%=label.created_at.strftime("%Y-%m-%d %H:%M")%></td>
        <td>
          <%= link_to '編集', edit_admin_label_path(label), class: 'btn btn-primary mr-3' %>
          <%= link_to '削除', [:admin, label], method: :delete,
                      data: { confirm: "「#{label.name}」を削除します。よろしいですか？"},
                      class: 'btn btn-danger'%>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>