<h1>ユーザー詳細</h1>

<table class="table table-hover">
  <tbody>
  <tr>
    <th>ID</th>
    <td><%= @user.id %></td>
  </tr>
  <tr>
    <th>名前</th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email%></td>
  </tr>
    <th>管理者権限</th>
    <td><%= @user.admin? ? 'あり' : 'なし' %></td>
  <tr>
    <th>作成日時</th>
    <td><%= @user.created_at.strftime("%Y-%m-%d %H:%M") %></td>
  </tr>
  <tr>
    <th>更新日時</th>
    <td><%= @user.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
  </tr>
  </tbody>
</table>

<%= link_to '編集', edit_admin_user_path, class: 'btn btn-primary mr-3' %>
<%= link_to '削除', [:admin, @user], method: :delete,
            data: { confirm: "ユーザー「#{@user.name}」を削除します。よろしいですか？"},
            class: 'btn btn-danger' %>


<div class="mb-3">
  <table class="table table-hover">
    <thead class="thead-default">
    　<tr>
      <th>名称</th>
      <th>期限日</th>
      <th>ステータス</th>
      <th>優先度</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @user_tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.end_deadline %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= paginate @user_tasks %>
</div>